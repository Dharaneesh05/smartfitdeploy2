# Environment Configuration for SmartFit App
# Copy this file to .env and fill in the actual values

# MongoDB Atlas Connection String
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority&appName=smartfit

# JWT Secret for authentication (use a strong, random string)
JWT_SECRET=your-super-secure-jwt-secret-key-here

# Node Environment
NODE_ENV=development

# Server Port
PORT=5000

# Client URL (for development)
CLIENT_URL=http://localhost:3000

# Optional: Email service configuration (if needed)
# EMAIL_SERVICE=gmail
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASS=your-app-password
